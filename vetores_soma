Algoritmo "soma_vetor"

Var
    n, i : inteiro
     valores, soma, media: real
    vet: vetor[0..3] de real


Inicio

       escreva("Quantos números você vai digitar? ")
       leia(n)

       para i de 0 ate n-1 faca
            escreva("Digite um numero: ")
            leia(vet[i])
        fimpara

       escreval
      escreval("Os Valores são: ")

         para i de 0 ate n-1 faca
            se (vet[i]) >0 entao
              valores <- (vet[i])
              escreval("Valores:", valores)
            fimse
          fimpara
          
          escreval("")

         para i de 0 ate n-1 faca
            soma <- soma + (vet[i])
         fimpara
         
         escreval("Soma dos Elementos:", soma
         escreval("")

               media <- soma / n
         escreval("Media dos Elementos:", media)


Fimalgoritmo
